<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_black"
    android:orientation="vertical">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        android:background="@color/brand_surface">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRATYAKSH AI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/text_white"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTERPRISE v10.0"
            android:textSize="12sp"
            android:textColor="@color/brand_neon"/>
    </LinearLayout>

    <!-- TOOLS GRID -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPLIANCE TOOLS"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>

            <GridLayout
                android:id="@+id/gridCompliance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">
                <!-- Dynamically populated in Kotlin -->
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FINANCE & TAX"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>

            <GridLayout
                android:id="@+id/gridFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5">
                <!-- Dynamically populated in Kotlin -->
            </GridLayout>

            <!-- FOOTER -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SECURED BY LOCAL CRYPTOGRAPHY"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>