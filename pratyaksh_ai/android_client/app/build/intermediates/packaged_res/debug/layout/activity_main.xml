<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‡®ðŸ‡³ PratyakshAI"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FY End Date (YYYY-MM-DD)"
        android:textColor="#666666"/>

    <EditText
        android:id="@+id/etFyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2023-03-31"
        android:inputType="date"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Form Type"
        android:textColor="#666666"/>

    <RadioGroup
        android:id="@+id/rgFormType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rbAoc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AOC-4 (Financials)"
            android:checked="true"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/rbMgt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MGT-7 (Annual)"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnAnalyze"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Check Compliance Risk"
        android:backgroundTint="#2196F3"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Result will appear here..."
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"/>

</LinearLayout>
